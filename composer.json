{
  "name": "a2nt/suitecrm-test",
  "description": "SuiteCRM Application",
  "minimum-stability": "dev",
  "prefer-stable": false,
  "suggest": {
    "ext-imap": "Needed for emails module"
  },
  "require": {
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-zip": "*",
    "silverstripe/vendor-plugin": "^1.0",
    "salesagility/suitecrm": "dev-hotfix"
  },
  "require-dev": {
    "api-platform/schema-generator": "^2.2",
    "browserstack/browserstack-local": "^1.1",
    "codeception/aspect-mock": "^3.1",
    "codeception/codeception": "^4.1",
    "codeception/module-asserts": "^1.3",
    "codeception/module-filesystem": "^1.0",
    "codeception/module-phpbrowser": "^1.0",
    "codeception/module-rest": "^1.3",
    "codeception/module-symfony": "^1.0",
    "codeception/module-webdriver": "^1.2",
    "consolidation/robo": "^2.2.2",
    "dama/doctrine-test-bundle": "^6.2",
    "doctrine/doctrine-fixtures-bundle": "~3.2",
    "fakerphp/faker": "^1.14",
    "filp/whoops": "^2.3",
    "flow/jsonpath": "^0.4",
    "friendsofphp/php-cs-fixer": "^2.15",
    "mikey179/vfsstream": "1.6.*",
    "mockery/mockery": "^1.1.0",
    "phpunit/phpunit": "^9.5",
    "scssphp/scssphp": "^1.5",
    "symfony/maker-bundle": "^1.14",
    "symfony/stopwatch": "5.2.*",
    "symfony/web-profiler-bundle": "5.2.*"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/salesagility/SuiteCRM-Core"
    }
  ],
  "config": {
    "allow-plugins": {
      "wikimedia/composer-merge-plugin": true,
      "symfony/flex": true,
      "composer/installers": true,
      "silverstripe/vendor-plugin": true
    }
  },
  "extra": {
    "expose": [
      "client/dist"
    ]
  }
}
